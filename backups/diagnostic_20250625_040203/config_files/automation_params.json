{
  "config_info": {
    "version": "3.2.1",
    "last_updated": "2025-01-24",
    "description": "Paramètres automation MIA_IA_SYSTEM - Configuration live trading automation"
  },
  
  "automation": {
    "enabled": false,
    "mode": "paper_trading",
    "max_position_size": 2,
    "daily_loss_limit": 500.0,
    "session_start_hour": 9,
    "session_end_hour": 16,
    "auto_start_on_launch": false,
    "auto_stop_on_target": false,
    "operation_modes": {
      "simulation": {
        "description": "Mode simulation pour tests",
        "real_orders": false,
        "real_data": true,
        "performance_tracking": true
      },
      "paper_trading": {
        "description": "Paper trading avec données réelles",
        "real_orders": false,
        "real_data": true,
        "broker_simulation": true
      },
      "live_trading": {
        "description": "Trading réel avec capital",
        "real_orders": true,
        "real_data": true,
        "safety_checks_enhanced": true
      }
    }
  },
  
  "signal_automation": {
    "auto_signal_generation": true,
    "signal_frequency_ms": 1000,
    "signal_validation": {
      "multi_timeframe_check": true,
      "pattern_confirmation": true,
      "risk_assessment": true,
      "market_hours_validation": true
    },
    "signal_filtering": {
      "min_signal_strength": 0.65,
      "max_signals_per_hour": 10,
      "duplicate_signal_filter": true,
      "signal_cooldown_minutes": 5
    },
    "auto_execution": {
      "enabled": true,
      "execution_delay_ms": 50,
      "order_validation": true,
      "position_size_check": true,
      "risk_limit_check": true
    }
  },
  
  "position_management": {
    "auto_position_sizing": {
      "enabled": true,
      "method": "fixed_size",
      "base_size": 1,
      "confidence_scaling": {
        "enabled": false,
        "high_confidence_multiplier": 1.5,
        "low_confidence_multiplier": 0.5
      }
    },
    "auto_stop_management": {
      "enabled": true,
      "stop_type": "fixed",
      "default_stop_ticks": 10,
      "trailing_stop": {
        "enabled": false,
        "trail_amount": 2,
        "activation_profit": 8
      }
    },
    "auto_profit_taking": {
      "enabled": false,
      "profit_target_ticks": 15,
      "partial_profit_taking": false,
      "scale_out_levels": []
    },
    "position_monitoring": {
      "real_time_pnl": true,
      "position_timeout_minutes": 60,
      "auto_close_timeout": false,
      "emergency_close_triggers": {
        "system_error": true,
        "connection_loss": true,
        "market_close": true
      }
    }
  },
  
  "risk_management": {
    "emergency_stop_enabled": true,
    "max_drawdown_percent": 15.0,
    "position_sizing_method": "fixed",
    "daily_limits": {
      "max_daily_trades": 25,
      "max_consecutive_losses": 4,
      "cooldown_after_losses": 15
    },
    "real_time_monitoring": {
      "pnl_monitoring": true,
      "risk_utilization": true,
      "margin_monitoring": true,
      "volatility_monitoring": true
    },
    "auto_risk_adjustment": {
      "enabled": false,
      "reduce_size_on_losses": false,
      "increase_size_on_wins": false,
      "dynamic_stop_adjustment": false
    }
  },
  
  "data_collection": {
    "auto_data_capture": {
      "enabled": true,
      "capture_frequency_ms": 100,
      "data_types": [
        "market_data",
        "signal_data", 
        "execution_data",
        "performance_data"
      ]
    },
    "snapshot_automation": {
      "enabled": true,
      "pre_trade_snapshots": true,
      "execution_snapshots": true,
      "post_trade_snapshots": true,
      "performance_snapshots": true
    },
    "data_storage": {
      "real_time_storage": true,
      "compression_enabled": true,
      "backup_frequency_hours": 24,
      "retention_days": 365
    }
  },
  
  "performance_tracking": {
    "real_time_metrics": {
      "enabled": true,
      "update_frequency_seconds": 5,
      "metrics_displayed": [
        "current_pnl",
        "daily_pnl",
        "win_rate",
        "trade_count",
        "position_status"
      ]
    },
    "auto_reporting": {
      "enabled": true,
      "daily_reports": true,
      "weekly_summaries": true,
      "performance_alerts": true
    },
    "adaptive_optimization": {
      "enabled": false,
      "optimization_frequency": 100,
      "auto_parameter_tuning": false,
      "a_b_testing": false
    }
  },
  
  "system_monitoring": {
    "health_checks": {
      "enabled": true,
      "check_frequency_seconds": 30,
      "components_monitored": [
        "data_feeds",
        "signal_generator",
        "execution_engine",
        "risk_manager"
      ]
    },
    "performance_monitoring": {
      "cpu_monitoring": true,
      "memory_monitoring": true,
      "latency_monitoring": true,
      "error_rate_monitoring": true
    },
    "auto_recovery": {
      "enabled": true,
      "auto_reconnect": true,
      "max_reconnect_attempts": 3,
      "fallback_procedures": true
    }
  },
  
  "notifications": {
    "discord_integration": {
      "enabled": true,
      "webhook_url": "DISCORD_WEBHOOK_TO_CONFIGURE",
      "notification_types": [
        "trade_executions",
        "daily_summary",
        "system_alerts",
        "performance_milestones"
      ]
    },
    "email_notifications": {
      "enabled": false,
      "smtp_settings": {},
      "notification_types": []
    },
    "system_alerts": {
      "critical_errors": true,
      "performance_degradation": true,
      "risk_limit_breaches": true,
      "system_downtime": true
    }
  },
  
  "integration_settings": {
    "sierra_chart": {
      "enabled": true,
      "connection_type": "acsil",
      "auto_connect": true,
      "reconnect_on_disconnect": true,
      "data_subscription": [
        "level1",
        "level2", 
        "time_and_sales"
      ]
    },
    "interactive_brokers": {
      "enabled": true,
      "connection_settings": {
        "host": "127.0.0.1",
        "port": 7497,
        "client_id": 1,
        "auto_connect": true
      },
      "api_settings": {
        "market_data": true,
        "options_data": true,
        "order_management": true
      }
    },
    "external_apis": {
      "enabled": false,
      "rate_limiting": true,
      "backup_providers": false
    }
  },
  
  "safety_features": {
    "kill_switches": {
      "manual_kill_switch": true,
      "auto_kill_switch": true,
      "kill_triggers": [
        "max_daily_loss",
        "system_errors",
        "connection_loss",
        "manual_intervention"
      ]
    },
    "position_safety": {
      "max_open_positions": 3,
      "position_correlation_check": true,
      "exposure_limits": true,
      "overnight_position_handling": "close_all"
    },
    "data_safety": {
      "data_validation": true,
      "stale_data_detection": true,
      "backup_data_sources": false,
      "data_quality_monitoring": true
    }
  },
  
  "development_features": {
    "debug_mode": {
      "enabled": false,
      "verbose_logging": false,
      "signal_debugging": false,
      "execution_simulation": false
    },
    "testing_features": {
      "paper_trading_mode": true,
      "backtesting_integration": false,
      "performance_benchmarking": false
    },
    "development_overrides": {
      "bypass_risk_checks": false,
      "extended_trading_hours": false,
      "test_signal_injection": false
    }
  },
  
  "environment_specific": {
    "development": {
      "automation": {
        "enabled": false,
        "mode": "simulation",
        "max_position_size": 1
      },
      "safety_features": {
        "enhanced_validation": true,
        "additional_logging": true
      }
    },
    "staging": {
      "automation": {
        "enabled": true,
        "mode": "paper_trading", 
        "max_position_size": 1
      },
      "performance_tracking": {
        "detailed_metrics": true,
        "comparison_mode": true
      }
    },
    "production": {
      "automation": {
        "enabled": true,
        "mode": "live_trading",
        "max_position_size": 2
      },
      "safety_features": {
        "strict_enforcement": true,
        "enhanced_monitoring": true,
        "no_overrides": true
      }
    }
  }
}