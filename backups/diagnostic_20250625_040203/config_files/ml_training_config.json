{
  "config_info": {
    "version": "3.2.1",
    "last_updated": "2025-01-24",
    "description": "Configuration ML training MIA_IA_SYSTEM - Simple Linear Model First"
  },
  
  "model": {
    "type": "linear",
    "retrain_frequency": 50,
    "min_training_samples": 100,
    "model_complexity": "simple",
    "philosophy": "simple_first_then_complex",
    "available_models": {
      "linear": {
        "description": "Linear regression/classification - MVP model",
        "complexity": "low",
        "training_speed": "fast",
        "interpretability": "high",
        "recommended_for": "initial_deployment"
      },
      "random_forest": {
        "description": "Random Forest - Next step complexity",
        "complexity": "medium",
        "training_speed": "medium", 
        "interpretability": "medium",
        "recommended_for": "after_linear_validation"
      },
      "xgboost": {
        "description": "XGBoost - Advanced tree model",
        "complexity": "high",
        "training_speed": "slow",
        "interpretability": "low",
        "recommended_for": "proven_edge_optimization"
      },
      "neural_network": {
        "description": "Neural networks - Only if justified",
        "complexity": "very_high",
        "training_speed": "very_slow",
        "interpretability": "very_low",
        "recommended_for": "large_dataset_proven_edge"
      }
    }
  },
  
  "features": {
    "scaling": true,
    "selection": false,
    "max_features": 8,
    "feature_engineering": {
      "enabled": false,
      "auto_feature_creation": false,
      "polynomial_features": false,
      "interaction_terms": false
    },
    "feature_preprocessing": {
      "normalization_method": "min_max",
      "handle_missing_values": "forward_fill",
      "outlier_treatment": "clip",
      "feature_stability_check": true
    },
    "feature_importance": {
      "calculate_importance": true,
      "importance_methods": ["coefficients", "permutation"],
      "importance_threshold": 0.01,
      "remove_low_importance": false
    }
  },
  
  "validation": {
    "split": 0.2,
    "cross_validation_folds": 5,
    "validation_strategy": "time_series_split",
    "holdout_validation": {
      "enabled": true,
      "holdout_percentage": 0.1,
      "temporal_holdout": true
    },
    "validation_metrics": {
      "classification": ["accuracy", "precision", "recall", "f1_score"],
      "regression": ["mse", "mae", "r2_score"],
      "trading_specific": ["sharpe_ratio", "hit_rate", "profit_factor"]
    }
  },
  
  "training_process": {
    "data_collection": {
      "min_trades_required": 100,
      "data_quality_threshold": 0.9,
      "feature_completeness_required": 0.95,
      "outlier_detection": true
    },
    "training_pipeline": {
      "steps": [
        "data_validation",
        "feature_preprocessing", 
        "train_test_split",
        "model_training",
        "validation",
        "performance_evaluation"
      ],
      "pipeline_validation": true,
      "intermediate_checkpoints": true
    },
    "hyperparameter_tuning": {
      "enabled": false,
      "method": "grid_search",
      "cv_folds": 3,
      "param_grid": {
        "linear": {
          "regularization": [0.01, 0.1, 1.0],
          "solver": ["liblinear", "lbfgs"]
        }
      }
    }
  },
  
  "model_deployment": {
    "deployment_criteria": {
      "min_validation_score": 0.6,
      "min_improvement_over_baseline": 0.05,
      "stability_requirement": true,
      "out_of_sample_validation": true
    },
    "a_b_testing": {
      "enabled": true,
      "test_allocation": 0.3,
      "min_test_trades": 50,
      "significance_threshold": 0.05
    },
    "rollback_criteria": {
      "performance_degradation": 0.1,
      "error_rate_increase": 0.05,
      "manual_override": true
    }
  },
  
  "retraining": {
    "auto_retraining": {
      "enabled": true,
      "trigger_conditions": [
        "trade_count_threshold",
        "performance_degradation",
        "data_drift_detection"
      ],
      "retraining_frequency_trades": 50,
      "max_retraining_frequency_hours": 24
    },
    "data_drift_detection": {
      "enabled": true,
      "drift_threshold": 0.1,
      "monitoring_window": 100,
      "statistical_tests": ["ks_test", "chi2_test"]
    },
    "incremental_learning": {
      "enabled": false,
      "update_frequency": 10,
      "memory_management": true
    }
  },
  
  "model_monitoring": {
    "performance_tracking": {
      "real_time_monitoring": true,
      "prediction_accuracy": true,
      "prediction_latency": true,
      "model_confidence_distribution": true
    },
    "data_quality_monitoring": {
      "feature_drift": true,
      "data_completeness": true,
      "outlier_detection": true,
      "correlation_monitoring": true
    },
    "alert_thresholds": {
      "accuracy_degradation": 0.05,
      "prediction_latency_ms": 10,
      "data_quality_score": 0.8,
      "prediction_confidence": 0.5
    }
  },
  
  "data_management": {
    "training_data": {
      "storage_format": "parquet",
      "compression": true,
      "data_versioning": true,
      "backup_frequency_hours": 24
    },
    "feature_store": {
      "enabled": false,
      "real_time_features": false,
      "batch_features": true,
      "feature_serving": false
    },
    "data_lineage": {
      "track_data_sources": true,
      "version_control": true,
      "transformation_logging": true
    }
  },
  
  "experimentation": {
    "experiment_tracking": {
      "enabled": true,
      "track_hyperparameters": true,
      "track_metrics": true,
      "track_artifacts": true
    },
    "model_comparison": {
      "enabled": true,
      "baseline_model": "linear",
      "comparison_metrics": ["accuracy", "profit_factor", "sharpe_ratio"],
      "statistical_significance_testing": true
    },
    "feature_experiments": {
      "enabled": false,
      "feature_ablation": false,
      "feature_addition": false,
      "feature_transformation": false
    }
  },
  
  "production_settings": {
    "model_serving": {
      "prediction_timeout_ms": 5,
      "batch_prediction": false,
      "model_caching": true,
      "fallback_model": "simple_baseline"
    },
    "model_versioning": {
      "version_control": true,
      "model_registry": false,
      "rollback_capability": true,
      "hot_swapping": false
    },
    "scaling": {
      "horizontal_scaling": false,
      "load_balancing": false,
      "resource_monitoring": true
    }
  },
  
  "safety_and_governance": {
    "model_validation": {
      "business_logic_validation": true,
      "statistical_validation": true,
      "domain_expert_review": false,
      "regulatory_compliance": false
    },
    "risk_management": {
      "prediction_bounds_checking": true,
      "model_uncertainty_quantification": false,
      "adversarial_testing": false,
      "fail_safe_defaults": true
    },
    "audit_trail": {
      "model_decisions_logging": true,
      "training_data_logging": true,
      "hyperparameter_logging": true,
      "performance_logging": true
    }
  },
  
  "integration": {
    "trading_system_integration": {
      "signal_generation": true,
      "risk_management": false,
      "position_sizing": false,
      "execution_timing": false
    },
    "data_pipeline_integration": {
      "real_time_features": true,
      "batch_features": false,
      "feature_validation": true,
      "data_quality_checks": true
    },
    "monitoring_integration": {
      "performance_dashboards": false,
      "alert_systems": true,
      "logging_systems": true
    }
  },
  
  "development_workflow": {
    "local_development": {
      "jupyter_notebooks": true,
      "model_prototyping": true,
      "fast_iteration": true,
      "data_sampling": true
    },
    "testing": {
      "unit_tests": true,
      "integration_tests": false,
      "performance_tests": true,
      "backtesting_integration": false
    },
    "deployment_pipeline": {
      "automated_testing": false,
      "staged_deployment": true,
      "rollback_automation": true,
      "monitoring_setup": true
    }
  },
  
  "environment_specific": {
    "development": {
      "model": {
        "type": "linear",
        "min_training_samples": 20,
        "retrain_frequency": 10
      },
      "validation": {
        "split": 0.3,
        "cross_validation_folds": 3
      },
      "experimentation": {
        "rapid_prototyping": true,
        "detailed_logging": true
      }
    },
    "staging": {
      "model": {
        "type": "linear",
        "min_training_samples": 50,
        "retrain_frequency": 25
      },
      "validation": {
        "split": 0.2,
        "holdout_validation": true
      },
      "monitoring": {
        "enhanced_monitoring": true,
        "performance_comparison": true
      }
    },
    "production": {
      "model": {
        "type": "linear",
        "min_training_samples": 100,
        "retrain_frequency": 50
      },
      "validation": {
        "strict_validation": true,
        "multiple_validation_methods": true
      },
      "safety": {
        "enhanced_safety_checks": true,
        "conservative_deployment": true
      }
    }
  }
}