{
  "config_info": {
    "version": "3.2.1",
    "last_updated": "2025-01-24", 
    "description": "Configuration monitoring MIA_IA_SYSTEM - Surveillance complète système"
  },
  
  "monitoring": {
    "enabled": true,
    "update_frequency_seconds": 5,
    "metrics_retention_days": 30,
    "real_time_monitoring": true,
    "monitoring_levels": {
      "system": true,
      "trading": true,
      "performance": true,
      "risk": true,
      "data_quality": true
    }
  },
  
  "system_monitoring": {
    "hardware_metrics": {
      "enabled": true,
      "cpu_monitoring": {
        "enabled": true,
        "threshold_warning": 70.0,
        "threshold_critical": 85.0,
        "sample_frequency_seconds": 5
      },
      "memory_monitoring": {
        "enabled": true,
        "threshold_warning": 75.0,
        "threshold_critical": 90.0,
        "swap_monitoring": true
      },
      "disk_monitoring": {
        "enabled": true,
        "threshold_warning": 80.0,
        "threshold_critical": 95.0,
        "io_monitoring": true
      },
      "network_monitoring": {
        "enabled": true,
        "bandwidth_monitoring": true,
        "latency_monitoring": true,
        "connection_monitoring": true
      }
    },
    "process_monitoring": {
      "enabled": true,
      "trading_process": {
        "monitor_main_process": true,
        "monitor_child_processes": true,
        "restart_on_crash": true,
        "max_restart_attempts": 3
      },
      "resource_limits": {
        "max_cpu_percent": 80.0,
        "max_memory_mb": 2048,
        "max_file_handles": 1000
      }
    }
  },
  
  "trading_monitoring": {
    "signal_generation": {
      "enabled": true,
      "signal_frequency_tracking": true,
      "signal_quality_tracking": true,
      "generation_time_tracking": true,
      "thresholds": {
        "max_generation_time_ms": 10,
        "min_signal_quality": 0.6,
        "max_signals_per_minute": 10
      }
    },
    "execution_monitoring": {
      "enabled": true,
      "order_latency": {
        "track_submission_time": true,
        "track_fill_time": true,
        "threshold_warning_ms": 100,
        "threshold_critical_ms": 500
      },
      "execution_quality": {
        "slippage_monitoring": true,
        "fill_rate_monitoring": true,
        "rejection_rate_monitoring": true
      }
    },
    "position_monitoring": {
      "enabled": true,
      "real_time_pnl": true,
      "position_exposure": true,
      "margin_utilization": true,
      "position_duration": true
    }
  },
  
  "performance_monitoring": {
    "real_time_metrics": {
      "enabled": true,
      "pnl_tracking": {
        "realized_pnl": true,
        "unrealized_pnl": true,
        "daily_pnl": true,
        "cumulative_pnl": true
      },
      "trading_statistics": {
        "win_rate": true,
        "profit_factor": true,
        "sharpe_ratio": true,
        "max_drawdown": true,
        "average_trade": true
      },
      "efficiency_metrics": {
        "trades_per_hour": true,
        "signals_to_trades_ratio": true,
        "successful_execution_rate": true
      }
    },
    "benchmark_comparison": {
      "enabled": false,
      "benchmark_symbol": "SPY",
      "comparison_metrics": ["returns", "volatility", "sharpe"],
      "reporting_frequency": "daily"
    }
  },
  
  "risk_monitoring": {
    "real_time_risk": {
      "enabled": true,
      "position_risk": {
        "current_exposure": true,
        "var_calculation": false,
        "stress_testing": false
      },
      "account_risk": {
        "margin_monitoring": true,
        "buying_power": true,
        "account_equity": true
      }
    },
    "risk_limits": {
      "position_limits": {
        "max_position_size": 2,
        "max_total_exposure": 5,
        "concentration_limits": true
      },
      "loss_limits": {
        "daily_loss_limit": 500.0,
        "max_drawdown": 0.15,
        "consecutive_losses": 4
      }
    },
    "risk_alerts": {
      "approach_limit_warning": 0.8,
      "breach_limit_critical": 1.0,
      "auto_actions_on_breach": true
    }
  },
  
  "data_quality_monitoring": {
    "market_data_quality": {
      "enabled": true,
      "data_freshness": {
        "max_age_seconds": 5,
        "stale_data_alerts": true
      },
      "data_completeness": {
        "missing_data_detection": true,
        "gap_detection": true,
        "completeness_threshold": 0.95
      },
      "data_accuracy": {
        "price_validation": true,
        "volume_validation": true,
        "outlier_detection": true
      }
    },
    "connectivity_monitoring": {
      "broker_connection": {
        "connection_status": true,
        "heartbeat_monitoring": true,
        "reconnection_tracking": true
      },
      "data_feed_connection": {
        "sierra_chart_connection": true,
        "backup_feed_status": false,
        "latency_monitoring": true
      }
    }
  },
  
  "alerts": {
    "enabled": true,
    "email_notifications": false,
    "daily_loss_threshold": 400.0,
    "system_error_threshold": 3,
    "alert_channels": {
      "discord": {
        "enabled": true,
        "webhook_url": "CONFIGURE_DISCORD_WEBHOOK",
        "alert_types": [
          "critical_errors",
          "trading_alerts", 
          "performance_alerts",
          "system_alerts"
        ]
      },
      "console": {
        "enabled": true,
        "log_level": "WARNING",
        "color_coding": true
      },
      "file": {
        "enabled": true,
        "alert_log_file": "logs/alerts.log",
        "rotation": true
      }
    },
    "alert_priorities": {
      "critical": {
        "immediate_notification": true,
        "multiple_channels": true,
        "escalation": true
      },
      "warning": {
        "notification_delay_seconds": 30,
        "aggregation": true
      },
      "info": {
        "notification_delay_seconds": 300,
        "batch_sending": true
      }
    }
  },
  
  "logging": {
    "system_logging": {
      "enabled": true,
      "log_level": "INFO",
      "log_rotation": {
        "enabled": true,
        "max_file_size_mb": 100,
        "backup_count": 5
      },
      "log_destinations": [
        "file",
        "console"
      ]
    },
    "trading_logging": {
      "enabled": true,
      "detailed_signal_logging": true,
      "execution_logging": true,
      "performance_logging": true,
      "log_format": "structured_json"
    },
    "audit_logging": {
      "enabled": true,
      "all_actions_logged": true,
      "user_actions": true,
      "system_actions": true,
      "retention_days": 365
    }
  },
  
  "reporting": {
    "automated_reports": {
      "enabled": true,
      "daily_summary": {
        "enabled": true,
        "delivery_time": "17:00",
        "include_charts": false,
        "recipients": ["console", "discord"]
      },
      "weekly_report": {
        "enabled": true,
        "delivery_day": "sunday",
        "delivery_time": "20:00",
        "detailed_analysis": true
      },
      "monthly_report": {
        "enabled": false,
        "comprehensive_analysis": true,
        "performance_attribution": true
      }
    },
    "on_demand_reports": {
      "enabled": true,
      "available_reports": [
        "current_status",
        "performance_summary",
        "risk_analysis",
        "system_health"
      ]
    }
  },
  
  "dashboards": {
    "real_time_dashboard": {
      "enabled": false,
      "web_interface": false,
      "update_frequency_seconds": 1,
      "auto_refresh": true
    },
    "console_dashboard": {
      "enabled": true,
      "compact_view": true,
      "color_coding": true,
      "refresh_rate_seconds": 5
    }
  },
  
  "data_storage": {
    "metrics_storage": {
      "storage_backend": "local_files",
      "compression": true,
      "retention_policy": {
        "raw_metrics": 7,
        "aggregated_metrics": 30,
        "alerts": 90,
        "logs": 30
      }
    },
    "backup": {
      "enabled": true,
      "backup_frequency_hours": 24,
      "backup_location": "data/backups",
      "compression": true
    }
  },
  
  "integration": {
    "external_monitoring": {
      "enabled": false,
      "prometheus_metrics": false,
      "grafana_dashboard": false,
      "custom_webhooks": false
    },
    "health_checks": {
      "enabled": true,
      "health_check_endpoint": false,
      "component_health": true,
      "overall_health_score": true
    }
  },
  
  "performance_optimization": {
    "monitoring_overhead": {
      "max_cpu_usage": 5.0,
      "max_memory_mb": 50,
      "efficient_data_collection": true,
      "batch_processing": true
    },
    "data_aggregation": {
      "enabled": true,
      "aggregation_intervals": [
        "1min",
        "5min", 
        "1hour",
        "1day"
      ],
      "retention_per_interval": {
        "1min": 24,
        "5min": 168,
        "1hour": 720,
        "1day": 365
      }
    }
  },
  
  "environment_specific": {
    "development": {
      "monitoring": {
        "update_frequency_seconds": 10,
        "verbose_logging": true,
        "debug_metrics": true
      },
      "alerts": {
        "reduced_sensitivity": true,
        "development_alerts_only": true
      }
    },
    "staging": {
      "monitoring": {
        "update_frequency_seconds": 5,
        "comprehensive_monitoring": true
      },
      "alerts": {
        "staging_specific_thresholds": true,
        "comparison_with_dev": true
      }
    },
    "production": {
      "monitoring": {
        "update_frequency_seconds": 1,
        "high_priority_monitoring": true,
        "redundant_monitoring": true
      },
      "alerts": {
        "strict_thresholds": true,
        "immediate_escalation": true,
        "multiple_notification_channels": true
      }
    }
  }
}