    def create_backup(self):
        """Backup structure actuelle par sÃ©curitÃ©"""
        if self.dry_run:
            self.logger.info("ğŸ” [DRY RUN] Backup serait crÃ©Ã©")
            return
        
        timestamp = datetime.now().strftime("%Y%m%d_%H%M%S")
        backup_path = self.backup_dir / f"backup_{timestamp}"
        
        try:
            # CrÃ©er dossier backup
            backup_path.mkdir(parents=True, exist_ok=True)
            
            # Copier structure actuelle (sans les gros fichiers)
            for item in self.project_root.iterdir():
                if item.name in ['.git', '__pycache__', 'backup_structure', '.env']:
                    continue
                
                if item.is_dir():
                    shutil.copytree(item, backup_path / item.name, 
                                  ignore=shutil.ignore_patterns('*.pyc', '__pycache__'))
                elif item.suffix in ['.py', '.json', '.md', '.txt']:
                    shutil.copy2(item, backup_path / item.name)
            
            self.logger.info(f"âœ… Backup crÃ©Ã©: {backup_path}")
            return backup_path
            
        except Exception as e:
            self.logger.error(f"âŒ Erreur backup: {e}")
