    def validate_structure(self) -> bool:
        """Validation structure projet"""
        print("\nüìÅ VALIDATION STRUCTURE...")
        
        required_files = [
            "config/__init__.py",
            "config/trading_config.py", 
            "core/__init__.py",
            "core/base_types.py",
            "core/patterns_detector.py",
            "core/battle_navale.py"
        ]
        
        missing = []
        for file_path in required_files:
            if not Path(file_path).exists():
                missing.append(file_path)
        
        if missing:
            print(f"‚ùå Fichiers manquants: {len(missing)}")
            for file in missing:
                print(f"   ‚Ä¢ {file}")
            self.errors.extend(missing)
            return False
        else:
            print(f"‚úÖ Structure OK: {len(required_files)} fichiers")
            return True
    
    def validate_imports(self) -> bool:
        """Validation imports critiques"""
        print("\nüêç VALIDATION IMPORTS...")
        
        # Ajouter au path
        project_root = Path(".").absolute()
        if str(project_root) not in sys.path:
            sys.path.insert(0, str(project_root))
        
        critical_imports = [
            "config.trading_config",
            "config", 
            "core.base_types",
            "core"
        ]
        
        failed_imports = []
        import_times = []
        
        for module_name in critical_imports:
            try:
                start = time.perf_counter()
                
                # Clear cache
                if module_name in sys.modules:
                    del sys.modules[module_name]
                
                importlib.import_module(module_name)
                import_time = (time.perf_counter() - start) * 1000
                import_times.append(import_time)
                
                print(f"‚úÖ {module_name}: {import_time:.2f}ms")
                
            except Exception as e:
                failed_imports.append((module_name, str(e)))
                print(f"‚ùå {module_name}: {e}")
        
        if failed_imports:
            print(f"‚ùå Imports √©chou√©s: {len(failed_imports)}")
            self.errors.extend([f"Import {mod}: {err}" for mod, err in failed_imports])
            return False
        else:
            avg_time = np.mean(import_times)
            print(f"‚úÖ Tous imports OK: {avg_time:.2f}ms moyenne")
            return True
    
    def validate_performance(self) -> bool:
        """Validation performance basique"""
        print("\n‚ö° VALIDATION PERFORMANCE...")
        
        try:
            # Test calculs vectoris√©s basiques
            start = time.perf_counter()
            
            # Simulation donn√©es trading
            n_samples = 1000
            prices = np.random.uniform(4400, 4600, n_samples)
            volumes = np.random.randint(100, 2000, n_samples)
            
            # Calculs vectoris√©s (doit √™tre rapide)
            returns = np.diff(prices) / prices[:-1]
            vwap = np.sum(prices * volumes) / np.sum(volumes)
            volatility = np.std(returns) * np.sqrt(252)
            momentum = np.mean(returns[-20:]) if len(returns) >= 20 else 0
            
            calc_time = (time.perf_counter() - start) * 1000
            
            # Test performance patterns basique
            start = time.perf_counter()
            
            # Simulation pattern detection vectoris√©
            pattern_scores = np.random.random(100)
            weighted_scores = pattern_scores * np.exp(np.linspace(-1, 0, 100))
            final_score = np.mean(weighted_scores)
            
            pattern_time = (time.perf_counter() - start) * 1000
            
            total_time = calc_time + pattern_time
            
            print(f"‚úÖ Calculs vectoris√©s: {calc_time:.3f}ms")
            print(f"‚úÖ Pattern detection: {pattern_time:.3f}ms")
            print(f"‚úÖ Total: {total_time:.3f}ms")
            
            # Performance targets
            if total_time < 5.0:
                print("‚úÖ Performance: EXCELLENT")
                return True
            elif total_time < 10.0:
                print("‚ö†Ô∏è Performance: GOOD (acceptable)")
                return True
            else:
                print("‚ùå Performance: SLOW (optimisation requise)")
                self.errors.append(f"Performance trop lente: {total_time:.3f}ms")
                return False
                
        except Exception as e:
            print(f"‚ùå Erreur test performance: {e}")
            self.errors.append(f"Performance test failed: {e}")
            return False
    
    def validate_syntax(self) -> bool:
        """Validation syntax rapide"""
        print("\nüìù VALIDATION SYNTAX...")
        
        python_files = [
            "config/trading_config.py",
            "core/base_types.py"
        ]
        
        syntax_errors = []
        
        for file_path in python_files:
            if Path(file_path).exists():
                try:
                    with open(file_path, 'r', encoding='utf-8') as f:
                        source = f.read()
                    
                    # Test compilation
                    compile(source, file_path, 'exec')
                    print(f"‚úÖ {file_path}")
                    
                except SyntaxError as e:
                    syntax_errors.append(f"{file_path}:{e.lineno} - {e.msg}")
                    print(f"‚ùå {file_path}: {e.msg}")
                except Exception as e:
                    syntax_errors.append(f"{file_path} - {str(e)}")
                    print(f"‚ùå {file_path}: {e}")
        
        if syntax_errors:
            print(f"‚ùå Erreurs syntax: {len(syntax_errors)}")
            self.errors.extend(syntax_errors)
            return False
        else:
            print(f"‚úÖ Syntax OK: {len(python_files)} fichiers")
            return True
    
