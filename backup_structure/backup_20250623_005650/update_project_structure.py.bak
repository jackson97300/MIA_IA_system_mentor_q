    def create_directory_structure(self) -> Dict[str, int]:
        """CrÃ©ation structure dossiers"""
        structure = self.get_new_structure()
        stats = {"directories_created": 0, "files_created": 0, "skipped": 0}
        
        for dir_path, files in structure.items():
            full_dir_path = self.project_root / dir_path
            
            # CrÃ©er dossier si n'existe pas
            if not full_dir_path.exists():
                if not self.dry_run:
                    full_dir_path.mkdir(parents=True, exist_ok=True)
                    self.logger.info(f"ğŸ“ CrÃ©Ã© dossier: {dir_path}")
                    stats["directories_created"] += 1
                else:
                    self.logger.info(f"ğŸ” [DRY RUN] CrÃ©erait dossier: {dir_path}")
            else:
                self.logger.info(f"âœ… Dossier existe: {dir_path}")
                stats["skipped"] += 1
            
            # CrÃ©er fichiers dans le dossier
            for file_name in files:
                file_path = full_dir_path / file_name
                
                if not file_path.exists():
                    if not self.dry_run:
                        self.create_file_template(file_path)
                        stats["files_created"] += 1
                    else:
                        self.logger.info(f"ğŸ” [DRY RUN] CrÃ©erait fichier: {dir_path}/{file_name}")
                else:
                    self.logger.info(f"âœ… Fichier existe: {dir_path}/{file_name}")
                    stats["skipped"] += 1
        
        return stats
    
